#   3. FUNCTIONS
#   -------------------------------

# Log previously typed command into pet
function prev() {
  PREV=$(echo `history | tail -n2 | head -n1` | sed 's/[0-9]* //')
  sh -c "pet new `printf %q "$PREV"`"
}

# Git functionality
function ga() {  # Add and commit files in repo
  commit=`date '+%d/%m/%Y_%H:%M:%S' && echo "Working in:" && pwd && echo "Committed by: ${USER}"`
  git add .
  git commit -m "${commit}"
  git push
}

